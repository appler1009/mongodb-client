{
  "name": "mongodb-client",
  "version": "1.0.23",
  "description": "A desktop MongoDB client",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w",
    "build-backend": "cd backend && npm install && npm run build",
    "build-frontend": "cd frontend && npm install && npm run build",
    "start-electron-dev": "electron .",
    "dev": "npm run build-backend && concurrently \"npm run start-frontend-dev-server\" \"npm run start-electron-dev\"",
    "start-frontend-dev-server": "cd frontend && npm run dev",
    "package": "npm version patch && npm run build-backend && npm run build-frontend && electron-builder",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appler1009/mongodb-client.git"
  },
  "keywords": [
    "MongoDB"
  ],
  "author": "appler1009",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/appler1009/mongodb-client/issues"
  },
  "homepage": "https://github.com/appler1009/mongodb-client#readme",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "dev.appler.mongodbclient",
    "productName": "MongoDB Client",
    "copyright": "Copyright Â© 2025 ${author}",
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "backend/dist/**/*",
      "frontend/dist/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [],
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/app.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/app.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/app.png"
    }
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "electron-store": "^10.1.0",
    "fs-extra": "^11.3.0",
    "jsbn": "^1.1.0",
    "mongodb": "^6.17.0",
    "mongodb-wrapper-v3": "file:./packages/mongodb-wrapper-v3",
    "mongodb-wrapper-v4": "file:./packages/mongodb-wrapper-v4",
    "mongodb-wrapper-v5": "file:./packages/mongodb-wrapper-v5",
    "mongodb-wrapper-v6": "file:./packages/mongodb-wrapper-v6",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sprintf-js": "^1.1.3",
    "uuid": "^11.1.0"
  }
}
